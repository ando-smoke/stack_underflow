<h2>Sign In</h2>

<div class='row'>
  <div class='col-md-6'>
    <%= form_tag log_in_path do %>
      <div class='form-group'>
        <%= label_tag :email %>
        <%= text_field_tag :email, nil, class: 'form-control' %>
      </div>
      <div class='form-group'>
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, class: 'form-control' %>
      </div>
      <%= submit_tag "Log in", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
