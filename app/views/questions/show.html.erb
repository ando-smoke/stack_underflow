<h3><%= @question.title %></h3>

<p><%= @question.content %></p>
<p>submitted by: <%= @question.user.name %></p>



<%= link_to 'Edit Question', edit_question_path(@question),
  class: 'btn btn-info' %>

<%= link_to 'Delete Question', question_path(@question), :data => {:method => 'delete'},
  class: 'btn btn-danger' %>

<hr />
<%= link_to 'Add Response?', new_question_response_path(@question),
  class: 'btn btn-primary' %>
<hr />

<h4>Answers:</h4>

<ul>
  <% @question.responses.each do |response| %>
    <li>
      <%= response.user.name %> suggests:
      <%= response.answer %>
      <%= link_to "Edit Response",
        edit_question_response_path(@question, response),
        class: 'btn btn-info btn-xs' %>
      <%= link_to "Delete Response",
        question_response_path(@question, response),
          :data => { :confirm => 'Are you ready for this??',
                     :method => 'delete' },
          class: 'btn btn-danger btn-xs' %>
    </li>
  <% end %>
</ul>
