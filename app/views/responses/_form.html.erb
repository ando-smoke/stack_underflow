<%= render 'layouts/errors', object: @response %>

<div class="row">
  <div class='col-md-6'>
    <%= form_for [@question, @response] do |f| %>
      <div class='form-group'>
        <%= f.label :answer %>
        <%= f.text_area :answer, class: 'form-control' %>
      </div>
      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
